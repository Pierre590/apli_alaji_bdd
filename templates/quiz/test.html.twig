{% extends 'base.html.twig' %}

{% block title %}Choisir un candidat{% endblock %}

{% block body %}
    <h1><p class="text-muted">{{ quiz.name }}</p></h1>
    <h2><span class="badge badge-success">{{ student.fullname }}</span></h2>

    <!--{{ dump(quiz.criterias[0]) }}-->
    <table class="table table-dark mt-4 text-center">
    <form method="post">
        <thead>
            <tr>
                <th scope="col">TEST ORAL :</th>
                {% for criteria in quiz.criterias %}
                    <th scope="col">{{ criteria.name }} :
                        <input type="number" name="criterias[{{criteria.id}}]" min="0" max="1" required/>
                    </th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            <tr class="table-primary">
                <th scope="row"></th>
                <td></td>
                <td><button type="submit" class="btn btn-warning" style="float:right;">Valider</button></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </form>
</table>


{% endblock %}
