{% extends 'base.html.twig' %}

{% block title %}Résultats{% endblock %}

{% block body %}
    <h1>{{ quiz.name }}</h1>
    <h2><p class="text-muted">{{ student.fullname }}</p></h2>
    <h3><a href="mailto:{{ student.email }}">{{ student.email }}</a></h3>
    <table class="table table-dark mt-4 text-center">
                <thead>
                    <tr>
                        <th scope="col">Critères</th>
                        <th scope="col">Test écrit</th>
                        <th scope="col">Test oral</th>
                        <th scope="col">Résultat</th>
                    </tr>
                </thead>
                <tbody>
                    {% for result in results %}
                        <tr class="table-primary">
                            <th scope="row">{{result.criteria.name}}</th>
                            <td>{{result.test}}</td>
                            <td>{{result.interview}}</td>
                            <td>{{result.aquis ? 'Aquis' : 'Non aquis'}}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
{% endblock %}
